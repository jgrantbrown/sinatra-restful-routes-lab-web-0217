<h1> Change recipe here: </h1>
<form action='/recipes/<%=@recipe.id%>' method="post" >
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p> Name:</p> <input type="text" name="name" value="<%= @recipe.name%>">
  <p> Ingredients</p><input type="text" name="ingredients" value="<%= @recipe.ingredients%>">
  <p> Cook Time:</p><input type="text" name="cook_time" value="<%= @recipe.cook_time%>"></p>
  <input id="submit" type="submit" value="submit" name="submit">
</form>
